{
  "name": "vue-ssr-dev-with-webpack",
  "version": "1.0.0",
  "description": "vue app develop with webpack  (ssr mode)",
  "author": "yemiancheng <ymc-github@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "nodemon --legacy-watch --config build/nodemon.json",
    "dev:ssr": "nodemon --legacy-watch --config build/nodemon.json",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "exit \"0\"",
    "test:e2e": "exit \"0\"",
    "lint": "eslint --ext .js,.vue src test/unit test/e2e/specs --fix",
    "lint:no-fix": "eslint --ext .js,.vue src test/unit test/e2e/specs",
    "start": "cross-env NODE_ENV=production node app/server.js",
    "build": "rimraf dist && npm run build:client && npm run build:server",
    "build:client": "cross-env NODE_ENV=production webpack --config build/webpack.ssr-client.config.js --progress --hide-modules",
    "build:server": "cross-env NODE_ENV=production webpack --config build/webpack.ssr-server.config.js --progress --hide-modules",
    "build:ssr": "rimraf dist && npm run build:ssr-client && npm run build:ssr-server",
    "build:ssr-client": "cross-env NODE_ENV=production webpack --config build/webpack.ssr-client.config.js --progress --hide-modules",
    "build:ssr-server": "cross-env NODE_ENV=production webpack --config build/webpack.ssr-server.config.js --progress --hide-modules",
    "pro:ssr": "cross-env NODE_ENV=production node app/server.js"
  },
  "engines": {
    "node": ">=7.6",
    "npm": ">=4.1"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "chalk": "^2.3.0",
    "es6-promise": "^4.2.2",
    "koa": "^2.3.0",
    "koa-compress": "^2.0.0",
    "koa-favicon": "^2.0.0",
    "koa-logger": "^3.0.1",
    "koa-router": "^7.2.1",
    "koa-static": "^4.0.1",
    "lru-cache": "^4.1.1",
    "vue": "^2.5.13",
    "vue-i18n": "^8.1.0",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.5.13",
    "vuex": "^3.0.1",
    "vuex-router-sync": "^5.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-2": "^6.24.1",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.7",
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-html": "^4.0.1",
    "eslint-plugin-import": "^2.7.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.6",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "nodemon": "^2.0.2",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.0.0",
    "rimraf": "^2.6.2",
    "semver": "^5.4.1",
    "sw-precache-webpack-plugin": "^0.11.4",
    "url-loader": "^0.6.2",
    "vue-loader": "^13.6.2",
    "vue-ssr-webpack-plugin": "^3.0.0",
    "vue-style-loader": "^3.0.3",
    "vue-template-compiler": "^2.5.13",
    "webpack": "^3.10.0",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-middleware": "^2.0.3",
    "webpack-hot-middleware": "^2.19.1",
    "webpack-merge": "^4.1.0",
    "webpack-node-externals": "^1.6.0"
  },
  "license": "MIT"
}
